{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "pretty": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "rootDir": "./src"
  },
  "formatCodeOptions": {
    "identSize": 2,
    "tabSize": 2
  },
  "include": ["src"]
}
