{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "pretty": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "formatCodeOptions": {
    "identSize": 2,
    "tabSize": 2
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./test/**/*.ts"]
}
